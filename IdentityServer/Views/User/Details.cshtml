@model UserDetailsViewModel

<h2>User detail</h2>
<div class="page-section">

    <ul class="nav nav-tabs">
        <li class="nav-item">
            <a class="nav-link active" id="general-info-tab" data-toggle="tab" href="#general-info">General Info</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" id="roles-tab" data-toggle="tab" href="#roles">User Groups</a>
        </li>
    </ul>

    <form asp-action="Details" method="post">
        <input type="hidden" asp-for="User.Id" />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="tab-content mt-2">
            <!-- General Info Tab -->
            <div class="tab-pane fade show active" id="general-info">
                <partial name='_GeneralInfoTab' model="@Model" />
            </div>

            <!-- Roles Tab -->
            <div class="tab-pane fade" id="roles">
                <partial name='_RoleTab' model="@Model" />
            </div>
        </div>

        <div class="form-group text-right">
            <a asp-action="Index" class="mr-2">Back </a>
            <input type="submit" value="Save" class="btn btn-primary" />
        </div>

    </form>

</div>
