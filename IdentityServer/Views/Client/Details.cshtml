@model ClientDetailsViewModel


<div class="page-header">
    <h4>@Model.Client.ClientName</h4>
</div>

<div class="page-section">
    <ul class="nav nav-tabs">
        <li class="nav-item">
            <a class="nav-link active" id="general-info-tab" data-toggle="tab" href="#general-info">General Info</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" id="sso-tab" data-toggle="tab" href="#sso">SSO</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" id="roles-tab" data-toggle="tab" href="#roles">User Groups</a>
        </li>
    </ul>

    <form asp-action="Details" method="post">
        <input type="hidden" asp-for="Client.Id" />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="tab-content mt-2">
            <!-- General Info Tab -->
            <div class="tab-pane fade show active" id="general-info">
                <partial name='_GeneralInfoTab'model="@Model" />
            </div>

            <!-- SSO Tab -->
            <div class="tab-pane fade" id="sso">
                <partial name='_SSOTab'model="@Model" />
            </div>

            <!-- Roles Tab -->
            <div class="tab-pane fade" id="roles">
                <partial name='_RoleTab' model="@Model" />
            </div>
        </div>

        <div class="form-group text-right">
            <a asp-action="Index" class="mr-2">Back </a>
            <input type="submit" value="Save" class="btn btn-primary" />
        </div>

    </form>
</div>


<script src="~/js/client/details.js"></script>