@model ClientDetailsViewModel

<h4>Application information</h4>

<div class='form-group'>
    <label asp-for='Client.ClientName' class='control-label'>Application label</label>
    <input asp-for='Client.ClientName' class='form-control' />
    <span asp-validation-for='Client.ClientName' class='text-danger'></span>
</div>

<div class='form-group'>
    <label asp-for='Client.Description' class='control-label'>Description</label>
    <textarea asp-for="Client.Description" class="form-control"></textarea>
    <span asp-validation-for='Client.Description' class='text-danger'></span>
</div>

<div class='form-group'>
    <label asp-for='Client.LogoUri' class='control-label'>Logo</label>
    <input asp-for='Client.LogoUri' type='file' class='form-control-file' />
    <span asp-validation-for='Client.LogoUri' class='text-danger'></span>
</div>