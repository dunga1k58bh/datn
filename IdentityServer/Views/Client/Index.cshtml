@model List<IdentityServer4.EntityFramework.Entities.Client>

<div class="page-header">
    <h4>Applications</h4>
    <div class="header-side">
        <a asp-action="Create" class="btn btn-primary" >Register SSO application</a>
    </div>
</div>

<table class="table my-table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.First().ClientName)
            </th>
            <!-- Add other headers as needed -->
            <th>Status</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr class="table-item js-item">
                <td>
                    <div class="item-checkbox">
                        <input class="form-check-input" type="checkbox" name="ClientIds" value="@item.Id" 
                            id="role_@item.Id" />
                    </div>
                    <div class="name">@Html.DisplayFor(modelItem => item.ClientName)</div>
                </td>
                <!-- Add other columns as needed -->
                <td>Active</td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<script src="~/js/table/table.js"></script>