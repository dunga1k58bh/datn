@model ClientDetailsViewModel

<div>
    <!-- Render Roles list here -->
    <h5>Roles</h5>

    <div class="row">
        <div class="col-md-1">
        </div>
        <div class="col-md-4">
            <h5>Name</h5>
        </div>
        <div class="col-md-4">
            <h5>Description</h5>
        </div>
    </div>

    @foreach (var role in Model.Roles)
    {
        <div class="row js-item mb-1 py-3 @(Model.RoleIds.Contains(role.Id) ? "item-selected" : "")">
            <div class="col-md-1">
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" name="RoleIds" value="@role.Id" 
                        @(Model.RoleIds.Contains(role.Id) ? "checked" : "") id="role_@role.Id" />
                </div>
            </div>
            <div class="col-md-4">
                <div>@role.Name</div>
            </div>
            <div class="col-md-4">
                <div>@role.Description</div>
            </div>
        </div>
    }
</div>

<script src="~/js/table/table.js"></script>
