@model DoResetPasswordViewModel

<a class="btn btn-link btn-lg" href="/a/login">Back to login <i class="bi bi-arrow-right"></i></a>

<div class="account-form">

    <div class="form">
        <div>
            <div class="card">
                <h4 class="mt-4">Create your new password</h4>

                <div class="card-body">
                    <form asp-route="Login">

                        <div class="form-group">
                            <label asp-for="Password"></label>
                            <input type="password" class="form-control" placeholder="Password" asp-for="Password" autocomplete="off">
                        </div>

                        <div class="form-group">
                            <label asp-for="ConfirmPassword"></label>
                            <input type="password" class="form-control" placeholder="ConfirmPassword" asp-for="ConfirmPassword" autocomplete="off">
                        </div>

                        <partial name="_ValidationSummary" />

                        <button class="btn btn-primary btn-block btn-lg" name="button">Reset password</button>

                    </form>
                </div>
            </div>
        </div>
    </div>
</div>